<%= form_for(order) do |f| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

<!-- we want to change these to be dropdowns -->
  <div class="field">
    <%= f.label :pick_up_id %>
    <%= f.select :pick_up_id, @locations.map{|x| ["#{x.city}, #{x.state}", x.id] } %>
  </div>

  <div class="field">
    <%= f.label :drop_off_id %>
    <%= f.number_field :drop_off_id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
